<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UploadFile</servlet-name>
        <servlet-class>com.EDMS.AccessingDao.UploadFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDir</servlet-name>
        <servlet-class>com.EDMS.AccessingDao.CreateDir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRegistration</servlet-name>
        <servlet-class>com.EDMS.AccessingDao.UserRegistration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginRequest</servlet-name>
        <servlet-class>com.EDMS.AccessingDao.LoginRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminRegistration</servlet-name>
        <servlet-class>com.EDMS.AccessingDao.AdminRegistration</servlet-class>
    </servlet>
  <servlet-mapping>
        <servlet-name>UploadFile</servlet-name>
        <url-pattern>/UploadFile</url-pattern>
    </servlet-mapping>   
    <servlet-mapping>
        <servlet-name>CreateDir</servlet-name>
        <url-pattern>/CreateDir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegistration</servlet-name>
        <url-pattern>/UserRegistration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginRequest</servlet-name>
        <url-pattern>/LoginRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminRegistration</servlet-name>
        <url-pattern>/AdminRegistration</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
 </web-app>
